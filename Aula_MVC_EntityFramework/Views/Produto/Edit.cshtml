@model Aula_MVC_EntityFramework.Models.Produto

@{
	ViewData["Title"] = "Alterar Produto";
}

<h1>Create</h1>

<h4>Alterar Produto</h4>
<hr />
<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<div class="modal-body">
			@using (Html.BeginForm(actionName: "edit", controllerName: "produto", method: FormMethod.Post))
			{
				@Html.ValidationSummary(true, null, new { @class = "text-danger" })
				<div class="form-group">
					@Html.HiddenFor(model => model.Id)
					@Html.LabelFor(x => x.Nome, new { @class = "col-form-label" }):
					@Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do produto", min = "1" } })
					<span>
						@Html.ValidationMessageFor(x => x.Nome, null, new { @class = "text-danger" })
					</span>
				</div>
				<div class="form-group">
					@Html.LabelFor(x => x.Preco, new { @class = "col-form-label" }):
					@Html.EditorFor(x => x.Preco, new { htmlAttributes = new { @class = "form-control" } })
					<span>
						@Html.ValidationMessageFor(x => x.Preco, null, new { @class = "text-danger" })
					</span>
				</div>
				<div class="modal-footer m-2">
					<input type="submit" class="btn btn-primary" value="Alterar" />
				</div>
			}
		</div>
	</div>
	<div class="col-md-4"></div>
</div>

<div>
	@Html.ActionLink("Voltar", "Index")
</div>
